<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView

                android:id="@+id/ivGroupPicture"
                android:layout_width="106dp"
                android:layout_height="125dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"

                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintHeight_max="150dp"
                app:layout_constraintHeight_min="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="120dp"
                app:layout_constraintWidth_min="30dp"
                app:shapeAppearanceOverlay="@style/RoundedImage"
                tools:srcCompat="@drawable/airplane_icon" />

            <TextView

                android:id="@+id/tvGroupName"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Gruppenname"

                android:textSize="16sp"
                android:fontFamily="@font/manrope_medium"
                android:textColor="@color/black"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.148" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="120dp" />

            <TextView
                android:id="@+id/transaction"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:text="Tom schuldet dir 50 Euro"

                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/text_blue"
                android:textSize="13dp"

                app:layout_constraintBottom_toTopOf="@+id/transaction2"
                app:layout_constraintStart_toStartOf="@+id/tvGroupName"
                app:layout_constraintTop_toBottomOf="@+id/tvGroupName"
                app:layout_constraintVertical_bias="0.52" />

            <TextView
                android:id="@+id/transaction2"

                android:fontFamily="@font/manrope_regular"
                android:textColor="@color/text_blue"
                android:textSize="13dp"

                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="0dp"
                android:text="Tom schuldet dir 50 Euro"
                app:layout_constraintStart_toStartOf="@+id/transaction"
                app:layout_constraintTop_toBottomOf="@+id/transaction" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>